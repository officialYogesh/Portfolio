{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "validate:config": "tsx config/validation.ts",
    "build": "pnpm run validate:config && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "dev:full": "npm-run-all --parallel dev:next dev:type-check",
    "dev:next": "next dev --turbopack",
    "dev:type-check": "tsc --noEmit --watch",
    "build:analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next && rm -rf out",
    "preview": "pnpm run build && npm run start",
    "postinstall": "pnpm run type-check",
    "prebuild": "pnpm run validate:config"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-social-icons": "^6.24.0",
    "resend": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
